<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/edit_action"
            style="@style/ImageStyle"
            android:src="@drawable/ic_mode_edit_white_24dp" />

        <ImageView
            android:id="@+id/clear_action"
            style="@style/ImageStyle"
            android:layout_marginRight="@dimen/image_margin"
            android:src="@drawable/ic_clear_white_24dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/country_name"
            style="@style/TextItemStyle"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/item_margin_text" />

        <TextView
            android:id="@+id/country_code"
            style="@style/TextItemStyle"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/item_margin_text" />
    </RelativeLayout>
</com.daimajia.swipe.SwipeLayout>